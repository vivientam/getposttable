<h1>A list of posts should be here:</h1>

<table class="table table-condensed">
	<thead>
	<tr>
		<th>Id</th>
		<th>Owner</th>
		<th>Title</th>
		<th>URL</th>
		<th>Time</th>
		<th>Link</th>
	</thead>

	<tbody>
	<% @posts.each do |post| %>
		<div>
			<tr>
			<td class="active"><%= post.id %></td>
			<td class="warning"><%= post.user.email %></td>
			<td class="success"><%= post.title %></td>
			<td class="warning"><%= post.url %></td>
			<td class="danger"><%= post.created_at.to_date %></td>
			<td><%= link_to "Link to this post", post %></td>
			</tr>
		</div>
	</tbody>

<% end %>
<%= link_to "New post", new_post_path %>


